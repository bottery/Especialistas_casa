# Configuración de la aplicación
APP_NAME="Especialistas en Casa"
APP_ENV=production
APP_DEBUG=false
APP_URL=http://localhost
APP_TIMEZONE=America/Bogota

# Configuración de base de datos
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=especialistas_casa
DB_USERNAME=root
DB_PASSWORD=

# Configuración JWT
JWT_SECRET=CAMBIAR_ESTO_POR_UNA_CLAVE_SEGURA_DE_64_CARACTERES
JWT_EXPIRATION=3600

# Configuración de correo electrónico
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@especialistasencasa.com
MAIL_FROM_NAME="${APP_NAME}"

# OneSignal - Notificaciones Push
ONESIGNAL_APP_ID=
ONESIGNAL_REST_API_KEY=

# Pasarela de Pagos PSE
PSE_MERCHANT_ID=
PSE_API_KEY=
PSE_API_SECRET=
PSE_SANDBOX=true

# Configuración de archivos
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Configuración de seguridad
SESSION_LIFETIME=120
CSRF_TOKEN_LIFETIME=7200

# Configuración de logs
LOG_CHANNEL=file
LOG_LEVEL=error

# Configuración de caché
CACHE_DRIVER=file

# Configuración de idioma
DEFAULT_LOCALE=es
TIMEZONE=America/Bogota

# Configuración HIPAA/Habeas Data
ENABLE_DATA_ENCRYPTION=true
ENABLE_AUDIT_LOG=true
DATA_RETENTION_DAYS=2555
